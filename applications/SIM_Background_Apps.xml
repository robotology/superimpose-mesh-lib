<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- Required -->
    <dependencies>
        <port>/yarprun</port>
    </dependencies>

    <!-- Generic information-->
    <name>SIM_Background_Apps</name>
    <description>Background applications for general simulations</description>
    <version>1.2.0</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>

    <!-- Required modules. -->
    <module>
        <name>yarplogger</name>
        <node>yarprun</node>
        <parameters>--start</parameters>
	</module>
	  
    <module>
        <name>iCub_SIM</name>
		<node>yarprun</node>
    </module>
    
    <module>
        <name>simCartesianControl</name>
        <parameters>--robot icubSim</parameters>
        <node>yarprun</node>
        <dependencies>
        	<port>/icubSim/right_arm/state:o</port>
        </dependencies>
    </module>
    
    <module>
        <name>iKinCartesianSolver</name>
        <parameters>--part right_arm</parameters>
        <node>yarprun</node>
        <dependencies>
        	<port>/icubSim/right_arm/state:o</port>
        </dependencies>
    </module>
    
    <module>
        <name>iKinGazeCtrl</name>
        <parameters>--from configSim.ini</parameters>
        <node>yarprun</node>
    </module>
    
    <module>
        <name>yarpview</name>
        <parameters>--name /viewleft</parameters>
        <node>yarprun</node>
    </module>
    
    <module>
        <name>yarpview</name>
        <parameters>--name /viewright</parameters>
        <node>yarprun</node>
    </module>
    
    <!-- Required connections -->
    <connection>
        <from>/icubSim/cam/left</from>
        <to>/viewleft</to>
    </connection>
    
    <connection>
        <from>/icubSim/cam/right</from>
        <to>/viewright</to>
    </connection>
</application>
